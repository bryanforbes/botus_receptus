[flake8]
max-line-length = 80
extend-select = B,C,T4,B9,Y0,TC1,SIM9
extend-exclude =
    .venv*,
    stubs
ignore = E203, E266, E501, W503, PIE791, PIE792, PIE797, PT004
per-file-ignores =
    *.pyi: F401, F403, F405, F811, E127, E128, E203, E266, E301, E302, E305, E501, E701, E704, E741, B303, W503, W504, TC100
pytest-fixture-no-parentheses = True
pytest-parametrize-names-type = csv
